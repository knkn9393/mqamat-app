١ <?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maqamat">

    <!-- لا حاجة لإذن الإنترنت أو الوصول للتخزين إذا كان التطبيق يعمل بدون نت -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="مقامات"
        android:theme="@style/Theme.Maqamat">

        <!-- النشاط الرئيسي (MainActivity) -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- الأنشطة الخاصة بكل مقام -->
        <activity android:name=".MaqamActivity" />
        <activity android:name=".QuizActivity" />

    </application>

</manifest>
